<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/good_services_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Полезные сервисы"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addBlock"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="-80dp"
                android:background="@drawable/simple_container"
                android:elevation="8dp"
                android:translationZ="4dp"
                app:layout_constraintEnd_toEndOf="@id/good_services_text"
                app:layout_constraintStart_toStartOf="@id/good_services_text"
                app:layout_constraintTop_toBottomOf="@+id/good_services_text">

                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/special_services"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hiAddLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Привет Михаил"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/desctiptionAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineHeight="30dp"
                    android:text="Какой сервис\nВам нужен?"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hiAddLabel" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/adds_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/desctiptionAdd"
                    app:layout_constraintStart_toStartOf="@id/desctiptionAdd"
                    app:layout_constraintTop_toBottomOf="@id/desctiptionAdd">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:text="Подобрать"
                        android:textColor="#004676" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16dp"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="@id/addBlock"
                app:layout_constraintTop_toBottomOf="@id/addBlock"
                android:id="@+id/categoryText"
                android:text="Категории"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/categoryText"
                app:layout_constraintTop_toBottomOf="@id/categoryText"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/category_item"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:paddingBottom="10dp"
                android:id="@+id/servicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/addBlock"
                app:layout_constraintStart_toStartOf="@+id/addBlock"
                app:layout_constraintTop_toBottomOf="@id/recyclerView"
                tools:listitem="@layout/service_item" />
            <View
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/servicesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>