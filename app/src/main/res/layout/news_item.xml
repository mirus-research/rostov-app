<!-- res/layout/service_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/simple_container"
    android:elevation="2dp"
    android:translationZ="2dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_marginTop="17dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Левая картинка -->
        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/newsImage"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />

        <!-- Правая часть -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="19dp">

            <!-- Заголовок -->
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="14dp"
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кто мог додуматься дать разрешение?: что за высотка закроет вид на «Ростов-Арену»"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="4"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/montserrat_semibold" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/items"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/container"
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_height="25dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryBlock"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/adds_button_mini"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:src="@drawable/services_home_buildings"
                android:layout_width="15dp"
                android:layout_height="15dp"/>

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="Город"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/dateText"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13dp"
            android:text="Сегодня, 9:28"
            app:layout_constraintStart_toEndOf="@id/categoryBlock"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/categoryBlock"
            app:layout_constraintBottom_toBottomOf="@id/categoryBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pointer"
            android:textColor="#1960C1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginEnd="16dp"
            android:text="Источник: 161.ru"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@id/categoryBlock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/categoryBlock" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/items"/>
</androidx.constraintlayout.widget.ConstraintLayout>
