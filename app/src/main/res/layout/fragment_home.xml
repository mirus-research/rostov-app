<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:background="@drawable/simple_container_search"

        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/search_icon"
            android:src="@drawable/search_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <ImageView
            android:id="@+id/user_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <TextView
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/search_icon"
            app:layout_constraintBottom_toBottomOf="@+id/search_icon"
            app:layout_constraintStart_toEndOf="@+id/search_icon"
            android:fontFamily="@font/montserrat_regular"
            android:text="Поиск в разработке..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginStart="26dp"
        android:id="@+id/newsBlock"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/adds_button"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar">
        
        <ImageView
            android:id="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:src="@drawable/services_home_buildings"
            android:layout_width="22dp"
            android:layout_height="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Новости"
            android:textColor="#004676"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:alpha="0.4"
        android:layout_marginStart="12dp"
        android:id="@+id/afisha"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/adds_button_neutral"
        app:layout_constraintStart_toEndOf="@+id/newsBlock"
        app:layout_constraintTop_toBottomOf="@id/search_bar">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/services_dosug_cinema"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Афиша"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img2"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:alpha="0.4"
        android:layout_marginStart="12dp"
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/adds_button_neutral"
        app:layout_constraintStart_toEndOf="@+id/afisha"
        app:layout_constraintTop_toBottomOf="@id/search_bar">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/locator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Карта"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layoutAnimation="@anim/layout_anim_fall_down"
        android:id="@+id/recycler_view"
        tools:listitem="@layout/news_item"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginTop="142dp"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintEnd_toEndOf="@id/search_bar"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    <View
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
